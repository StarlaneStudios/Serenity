{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"strict": true,
		"types": [
			"solid-start/env"
		],
		"baseUrl": "./",
		"paths": {
			"~/*": [
				"./src/*"
			]
		}
	},
	"references": [
		{
			"path": "../../packages/serenity-utils"
		},
		{
			"path": "../../packages/serenity-primitives"
		},
		{
			"path": "../../packages/serenity-core"
		},
		{
			"path": "../../packages/serenity-styles"
		}
	]
}