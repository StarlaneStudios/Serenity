{
	"name": "@serenity-ui/core",
	"version": "0.1.0",
	"type": "module",
	"main": "./dist/serenity-core.umd.cjs",
	"module": "./dist/serenity-core.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/serenity-core.js",
			"browser": {
				"import": "./dist/serenity-core.js",
				"require": "./dist/serenity-core.umd.cjs"
			},
			"require": "./dist/serenity-core.umd.cjs",
			"node": "./dist/serenity-core.umd.cjs"
		},
		"./dist/style.css": {
			"import": "./dist/style.css",
			"require": "./dist/style.css"
		}
	},
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"test": "vitest",
		"publish": "pnpm build && pnpm publish --access public"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@serenity-ui/styles": "*",
		"@serenity-ui/utils": "*",
		"@serenity-ui/primitives": "*",
		"@kobalte/core": "0.10.0"
	},
	"devDependencies": {
		"sass": "1.65.1"
	},
	"peerDependencies": {
		"solid-js": "1.7.11"
	}
}
