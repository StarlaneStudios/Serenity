{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "lib",
		"outDir": "dist",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"esModuleInterop": true,
		"types": [
			"solid-js",
			"node"
		],
		"composite": true,
		"preserveWatchOutput": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"goToDefinition": true
				}
			}
		]
	},
	"include": [
		"lib/**/*",
		"declarations.d.ts"
	],
	"exclude": [
		"lib/**/*.test.ts(x)"
	],
	"references": [
		{
			"path": "../serenity-utils/tsconfig.json"
		},
		{
			"path": "../serenity-styles/tsconfig.json"
		},
		{
			"path": "../serenity-primitives/tsconfig.json"
		}
	]
}