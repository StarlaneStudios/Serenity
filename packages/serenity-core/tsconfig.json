{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "lib",
		"outDir": "dist",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"types": [
			"vite/client"
		],
		"noEmit": true,
		"composite": true,
		"paths": {
			"@serenity-ui/styles": ["../serenity-styles/lib"],
			"@serenity-ui/utils": ["../serenity-utils/lib"],
			"@serenity-ui/primitives": ["../serenity-primitives/lib"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly",
					"goToDefinition": true
				}
			}
		]
	},
	"include": [
		"lib/**/*",
		"env.d.ts"
	],
	"exclude": [
		"lib/**/*.test.ts(x)"
	],
	"references": [
		{
			"path": "../serenity-utils/tsconfig.json"
		},
		{
			"path": "../serenity-styles/tsconfig.json"
		},
		{
			"path": "../serenity-primitives/tsconfig.json"
		}
	]
}