{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "lib",
		"outDir": "dist",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"types": [
			"vite/client"
		],
		"noEmit": true,
		"composite": true,
		"paths": {
			"@serenity-ui/styles": ["../serenity-styles/lib"],
			"@serenity-ui/utils": ["../serenity-utils/lib"],
			"@serenity-ui/primitives": ["../serenity-primitives/lib"]
		}
	},
	"include": [
		"lib/**/*",
		"env.d.ts"
	],
	"references": [
		{
			"path": "../serenity-utils/tsconfig.json"
		},
		{
			"path": "../serenity-styles/tsconfig.json"
		},
		{
			"path": "../serenity-primitives/tsconfig.json"
		}
	]
}