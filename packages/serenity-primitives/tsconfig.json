{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"noEmit": true,
		"types": ["vite/client"],
		"paths": {
			"~/": ["./lib/"]
		},
	},
	"include": [
		"lib/**/*",
		"env.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"lib/**/*.test.ts",
	]
}