{
	"name": "@serenity-ui/styles",
	"type": "module",
	"scripts": {
		"build": "rm -rf dist && tsc && vite build",
		"test": "vitest",
		"dev": "vite build --watch"
	},
	"main": "./dist/serenity-styles.umd.cjs",
	"module": "./dist/serenity-styles.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"styles"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/serenity-styles.js",
			"require": "./dist/serenity-styles.umd.cjs"
		},
		"./dist/style.css": {
			"import": "./dist/style.css",
			"require": "./dist/style.css"
		},
		"./lib/sass/**/*.scss": "./lib/sass/**/*.scss"
	},
	"dependencies": {
		"@serenity-ui/utils": "*"
	}
}