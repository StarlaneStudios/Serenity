{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "lib",
		"baseUrl": ".",
		"outDir": "dist",
		"composite": true,
		"types": ["vite/client"],
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly",
					"goToDefinition": true,
				}
			}
		]
	},
	"include": [
		"lib/**/*",
		"env.d.ts"
	]
}