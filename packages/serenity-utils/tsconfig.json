{
	"compilerOptions": {
		"esModuleInterop": true,
		"rootDir": "lib",
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"paths": {
			"~/": ["./lib/"]
		}
	},
	"include": [
		"lib/**/*",
		"env.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"references": [
		{
			"path": "../../tsconfig.base.json"
		}
	]
}