{
	"exclude": [
		"node_modules",
		"dist",
		"dist/**/*"
	],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": ".",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "dist",
		"strict": true,
		"noEmitOnError": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly",
					"goToDefinition": true,
				}
			}
		]
	}
}